page{
  width: 100%;
  height: 100%;
}
.content{
  width: 100%;
  height: 100%;
  background-color: rgb(245, 245, 245);
  position: absolute;
  top: 0;
}
.content .sendbox{
  width: 90%;
  margin: 20rpx auto 0 auto;
  background-color: white;
  border-radius: 10rpx;
  height: auto;
  border: 1rpx solid rgb(240, 240, 240);
  position: relative;
  padding: 20rpx;
}
.content .sendbox .name,.linkurl,.lab{
  width: 100%;
  height: 50rpx;
  border-radius: 30px;
  font-size: 30rpx;
  text-align: center;
  line-height: 50rpx;
  border: 1rpx solid rgb(212, 212, 212);
  display: block;
  margin: 20rpx 0;
}
.content .sendbox .uploadimgaebox{
  width: 100%;
  height: 200rpx;
  border: 1rpx dotted rgb(194, 194, 194);
  margin-bottom: 20rpx;
  position: relative;
}
.content .sendbox .uploadimgaebox image{
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin: 0 auto;
  position: relative;
  top: 25rpx;
}
.content .sendbox .uploadimgaebox text{
  font-size: 35rpx;
  color: rgb(97, 97, 97);
  margin-left: 10rpx;
  position: absolute;
}
.content .sendbox .sendreq{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: white;
  font-size: 35rpx;
  background-color: #6495ED;
  border-radius: 10rpx;
  margin: 20rpx 0;
}