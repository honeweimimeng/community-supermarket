.tapNav {
  display: flex;
  flex-direction: row;
 }
 .tapNav view{
  flex:1;
  width:200rpx;
  height:100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 35rpx;
  color: rgb(122, 122, 122);
 }
 .tapNav .active {
  color:#6495ED;
  border-bottom:5rpx solid #6495ED;
  color: black;
  font-weight: 700;
 }
 .content{
   width: 100%;
   position: absolute;
   margin-top: 105rpx;
   top: 0;
   left: 0;
   bottom: 0;
 }
 #swiper{
   width: 100%;
   height: 100%;
 }
.contentitembox{
  position: fixed;
  width: 100%;
  top: 0rpx;
  height: calc(100% - 80rpx);
  position: relative;
}
.contentitembox .item_1{
  width: 100%;
  height: 250rpx;
  background-color: white;
  border-bottom: 1rpx solid rgb(218, 218, 218);
  position: relative;
}
.contentitembox .item_2{
  width: 100%;
  height: 250rpx;
  background-color: rgb(219, 219, 219);
  border-bottom: 1rpx solid rgb(218, 218, 218);
  position: relative;
}
.contentitembox .item_1 .name,.contentitembox .item_2 .name{
  position: absolute;
  font-weight: 700;
  font-size: 40rpx;
  top: 10rpx;
  left: 150rpx;
  color: rgb(94, 94, 94);
  display: block;
  width: 60%;
  height: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.contentitembox .item_1 image,.contentitembox .item_2 image{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  height: 130rpx;
  width: 130rpx;
}
.contentitembox .item_1 .show_price,.contentitembox .item_2 .show_price{
  position: absolute;
  width: auto;
  height: auto;
  font-size: 35rpx;
  border-radius: 5rpx;
  color: rgb(134, 26, 26);
  font-weight: 600;
  top: 90rpx;
  left: 300rpx;
}
.contentitembox .item_1 .price,.contentitembox .item_2 .price{
  position: absolute;
  width: auto;
  height: auto;
  font-size: 35rpx;
  border-radius: 5rpx;
  color: rgb(124, 124, 124);
  top: 90rpx;
  left: 150rpx;
}
.textline{
  text-decoration:line-through;
}
.contentitembox .item_1 .checkurl,.contentitembox .item_2 .checkurl{
  position: absolute;
  top: 200rpx;
  left: 150rpx;
  height: 40rpx;
  width: 100rpx;
  color: white;
  background-color: tomato;
  font-size: 35rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 10rpx;
}
.contentitembox .item_1 .adress,.contentitembox .item_2 .adress{
  position: absolute;
  top: 130rpx;
  left: 150rpx;
  width: auto;
  height: auto;
  padding: 10rpx;
  font-size: 35rpx;
}