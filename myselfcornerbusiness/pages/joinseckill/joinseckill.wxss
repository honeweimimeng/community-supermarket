@import '../MyStores/MyStores.wxss';
.select{
  border-radius: 50%;
  border: 1rpx solid rgb(124, 124, 124);
  position: absolute;
  top: 90rpx;
  right: 10rpx;
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx;
  color: white;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
}
.not_select{
  border-radius: 50%;
  border: 1rpx solid rgb(124, 124, 124);
  position: absolute;
  top: 90rpx;
  right: 10rpx;
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx;
  color: white;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  background-color: #6495ED;
}
.optionbox{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.6);
}
.optionbox .optionbg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 1000;
}
.optionbox .optionitembox{
  width: 80%;
  height: 350rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  position: relative;
  top: 20%;
  background-color: white;
  z-index: 1001;
  padding: 20rpx;
}
.optionbox .optionitembox .name{
  position: absolute;
  font-weight: 700;
  font-size: 40rpx;
  top: 10rpx;
  left: 20rpx;
  color: rgb(94, 94, 94);
  display: block;
  width: 90%;
  height: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.optionbox .optionitembox .price{
  position: absolute;
  width: auto;
  height: auto;
  font-size: 35rpx;
  border-radius: 5rpx;
  color: rgb(134, 26, 26);
  font-weight: 600;
  top: 90rpx;
  left: 20rpx;
}
.optionbox .optionitembox .zhekoubox{
  width: 90%;
  height: 50rpx;
  position: absolute;
  top: 150rpx;
  position: relative;
}
.optionbox .optionitembox .zhekoubox input{
  width: 60%;
  height: 100%;
  border: 1rpx solid rgb(235, 235, 235);
  text-align: center;
  font-size: 35rpx;
  color: rgb(92, 92, 92);
  border-radius: 30px;
}
.optionbox .optionitembox .zhekoubox text{
  position: absolute;
  left: 62%;
  font-size: 30rpx;
  color: rgb(92, 92, 92);
  top: 5rpx;
}
.optionbox .optionitembox .zhuanchang{
  width: 90%;
  height: 50rpx;
  position: absolute;
  top: 170rpx;
  position: relative;
}
.optionbox .optionitembox .zhuanchang input{
  width: 60%;
  height: 100%;
  border: 1rpx solid rgb(235, 235, 235);
  text-align: center;
  font-size: 35rpx;
  color: rgb(92, 92, 92);
  border-radius: 30px;
}
.optionbox .optionitembox .zhuanchang text{
  position: absolute;
  left: 62%;
  font-size: 30rpx;
  color: rgb(92, 92, 92);
  top: 5rpx;
}
.optionbox .optionitembox .optioncheck{
  width: 100%;
  height: 50rpx;
  position: absolute;
  top: 200rpx;
  position: relative;
  background-color: #6495ED;
  text-align: center;
  line-height: 50rpx;
  color: white;
  font-size: 35rpx;
  border-radius: 30rpx;
}