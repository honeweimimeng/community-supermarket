page{
  width: 100%;
  height: 100%;
}
.contentbox{
  width: 100%;
  height: 100%;
  background-color: rgb(243, 243, 243);
  position: absolute;
  top: 0;
  overflow-x: hidden;
  overflow-y: scroll;
}
.contentbox .msgitem{
  width: 100%;
  height: 120rpx;
  border-top: 1rpx solid rgb(233, 233, 233);
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
  background: white;
}
.contentbox .msgitem image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  border-radius: 50%;
  border: 1rpx solid rgb(233, 233, 233);
}
.contentbox .msgitem .name{
  position: absolute;
  left: 120rpx;
  display: block;
  height: 40rpx;
  width: 80%;
  font-size: 35rpx;
  color: rgb(77, 77, 77);
  top: 10rpx;
}
.contentbox .msgitem .date{
  position: absolute;
  right: 20rpx;
  height: 40rpx;
  width: 80%;
  font-size: 25rpx;
  color: rgb(131, 131, 131);
  width: auto;
  top: 10rpx;
}
.contentbox .msgitem .content{
  position: absolute;
  left: 120rpx;
  display: block;
  height: 40rpx;
  width: 80%;
  font-size: 30rpx;
  color: rgb(124, 124, 124);
  top: 70rpx;
}
.chatpage{
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  background: white;
  border-radius: 30px 30px 0 0;
  z-index: 1003;
}
.chatpage .btmbar{
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  border-top: 1rpx solid rgb(236, 236, 236);
}
.chatpage .btmbar view{
  width: 200rpx;
  height: 62rpx;
  border-radius: 30px;
  position: absolute;
  top: 10rpx;
  right: 2%;
  background: #6495ED;
  color: white;
  text-align: center;
  line-height: 60rpx;
  font-size: 35rpx;
}
.chatpage .btmbar image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 10rpx;
  left: 20rpx;
}
.chatpage .btmbar input{
  width: 80%;
  height: 60rpx;
  border: 1rpx solid rgb(233, 233, 233);
  position: absolute;
  right: 5%;
  top: 10rpx;
  border-radius: 30px;
  font-size: 30rpx;
  text-align: left;
  padding: 0 10rpx;
}
.chatpage .chatmsgitem{
  width: 100%;
  display: block;
  margin-bottom: 15rpx;
  position: relative;
}
.chatpage .chatmsgitem image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 1rpx solid rgb(221, 221, 221);
  margin-top: 10rpx;
  position: relative;
}
.chatitem_imgleft{
  margin-left: 10rpx;
}
.chatitem_imgright{
  margin-left: calc(100% - 110rpx);
}
.chatitem_contentleft{
  margin-left: 10rpx;
}
.chatitem_contentright{
  margin-right: 120rpx;
  float: right;
  margin-top: -90rpx;
}
.chatpage .chatmsgitem .content{
  width: auto;
  height: auto;
  padding: 15rpx;
  font-size: 35rpx;
  color: rgb(95, 95, 95);
  background: rgb(241, 241, 241);
  border-radius: 30px;
}
.chatpage .chatmsgitem .name{
  top: 10rpx;
  font-size: 30rpx;
  position: absolute;
  display: block;
  margin-left: 120rpx;
}