page{
  width: 100%;
  height: 100%;
}
.contentbox{
  width: 100%;
  height: auto;
  position: relative;
}
.businessbox{
  width: 100%;
  height: 200rpx;
  border-bottom: 1rpx solid rgb(240, 240, 240);
  position: fixed;
  z-index: 1003;
}
.businessbox image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 5rpx;
  border: 1rpx solid rgb(204, 204, 204);
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.businessbox .lab{
  display: block;
  font-size: 30rpx;
  color: rgb(107, 107, 107);
  margin-left: 20rpx;
  overflow: hidden;
}
.businessbox .name{
  position: absolute;
  top: 20rpx;
  left: 160rpx;
  font-size: 35rpx;
  font-weight: 700;
}
.businessbox .type{
  position: absolute;
  height: 40rpx;
  top: 80rpx;
  left: 140rpx;
}
.type{
  display: inline-block;
  width: auto;
  height: 100%;
  background-color: #6495ED;
  color: white;
  border-radius: 5rpx;
  font-size: 30rpx;
  padding: 5rpx;
  color: white;
  margin-left: 20rpx;
  margin-right: 30rpx;
}
.badtalks,.praisetalks{
  position: absolute;
  top: 80rpx;
  left: 300rpx;
  font-size: 35rpx;
  color: rgb(104, 104, 104);
}
.talksbox{
  width: 100%;
  height: auto;
  border-bottom: 1rpx solid rgb(240, 240, 240);
  position: relative;
}
.talksbox .header{
  width: 95%;
  margin: 0 auto;
  height: 50rpx;
  overflow: hidden;
}
.talksbox .header .more{
  position: absolute;
  right: 20rpx;
  font-size: 30rpx;
  color: #6495ED;
  top: 5rpx;
}
.talksbox .header .tips{
  font-size: 35rpx;
  font-weight: 700;
}
.storesbox{
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 260rpx;
}
.topnav{
  width: 100%;
  height: 60rpx;
  position: relative;
  top: 200rpx;
}
.sel{
  color: tomato;
  font-weight: 600;
}
.topnav .navitem{
  width: 20%;
  height: 100%;
  margin-right: 20rpx;
  display: inline-block;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
}
.storesitembox{
  width: 95%;
  height: auto;
  position: relative;
  left: 2.5%;
  margin: 20rpx 0;
  border-radius: 15rpx;
}
.storesitembox .item{
  width: 48%;
  background-color: white;
  position: relative;
  display: inline-block;
  border: 1rpx solid rgb(237, 237, 237);
  padding-bottom: 20rpx;
  border-radius: 5rpx;
}
.storesitembox .left{
  float: left;
}
.storesitembox .right{
  margin-left: 2%;
}
.storesitembox .item .imagebox{
  width: 100%;
  display: block;
  height: 250rpx;
  overflow: hidden;
}
.storesitembox .item .imagebox image{
  max-width: 100%;  
  max-height: 100%;
}
.storesitembox .item .name{
  font-size: 35rpx;
  color: rgb(87, 87, 87);
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 90%;
  margin: 0 auto;
  font-weight: 700;
}
.storesitembox .item .pricebox{
  width: 95%;
  margin: 0 auto;
  height: 60rpx;
}
.storesitembox .item .pricebox .price{
  font-size: 40rpx;
  color: tomato;
}
.storesitembox .item .pricebox .salesnum{
  font-size: 30rpx;
  color: rgb(163, 163, 163);
  display: inline-block;
  margin-left: 20rpx;
}
.storesitembox .item .btype{
  padding: 2rpx;
  height: auto;
  background-color:  tomato;
  font-size: 25rpx;
  padding: 5rpx;
  color: white;
  margin-left: 5%;
  border-radius: 10rpx;
}