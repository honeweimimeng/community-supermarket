@import '../common/commonpage/loding_remax/loding_remax.wxss';
page{
  background-color: rgb(243, 243, 243);
}
.lodingscreen{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1001;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
}
.jum_wxpay{
  display: block;
  text-align: center;
  margin-top: 20%;
}
.adressselectbox{
  width: 100%;
  height: auto;
}
.adressselectbox .adressitem{
  width: 95%;
  height: 200rpx;
  margin: 20rpx auto;
  background-color: tomato;
  border-radius: 20rpx;
  background-color: white;
  padding-top: 20rpx;
  position: relative;
}
.adressselectbox .adressitem .contentbox{
  width: 80%;
  height: 60%;
  margin: 0 auto;
  border-bottom: 1rpx solid rgb(207, 207, 207);
  position: relative;
}
.adressselectbox .adressitem .contentbox .name{
  font-size: 35rpx;
  font-weight: 700;
}
.adressselectbox .adressitem .contentbox .phonenumber{
  font-size: 30rpx;
  color: rgb(90, 90, 90);
  margin-left: 20rpx;
}
.adressselectbox .adressitem .contentbox .adress{
  font-size: 30rpx;
  color: rgb(90, 90, 90);
  display: block;
  height: auto;
  margin-top: 20rpx;
}
.adressselectbox .adressitem .ctrbox{
  width: 80%;
  height: 40%;
  margin: 0 auto;
  position: relative;
}
.adressselectbox .adressitem .ctrbox .selectnow{
  border-radius: 50%;
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  border: 1rpx solid rgb(156, 156, 156);
  margin-top: 20rpx;
  color: white;
  text-align: center;
  line-height: 40rpx;
}
.adressselectbox .adressitem .ctrbox .delete{
  font-size: 35rpx;
  color: rgb(104, 104, 104);
  display: inline-block;
  top: 0rpx;
  position: absolute;
  right: 0;
}
.adresssel{
  border: 0;
  background-color: #6495ED;
}
.adressselectbox .adressitem input{
  border-radius: 30px;
  border: 1rpx solid rgb(212, 212, 212);
  width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
  margin: 10rpx auto;
  text-align: center;
  font-size: 35rpx;
}
.adressselectbox .adressitem .addernew{
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  background-color: #6495ED;
  color: white;
  margin: 20rpx auto;
  position: relative;
  text-align: center;
  border-radius: 30px;
}
.adressselectbox .addbtn{
  width: 95%;
  margin: 0 auto;
  height: 80rpx;
  background-color: #6495ED;
  margin-top: 20rpx;
  border-radius: 30rpx;
}
.adressselectbox .addbtn .addicon{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: white;
  text-align: center;
  line-height: 60rpx;
  color: #6495ED;
  position: relative;
  top: 10rpx;
  left: 200rpx;
  font-size: 35rpx;
  font-weight: 700;
  display: inline-block;
  border-radius: 50%;
}
.adressselectbox .addbtn text{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  position: absolute;
  left: 320rpx;
  color: white;
}